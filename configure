#!/bin/sh

docs=(AUTHORS BUGS ChangeLog CREDITS FAQ INSTALL NEWS README README.es THANKS TODO USAGE USAGE.es)
mkd=()
insdoc=()

function makefile {
echo include makefile.in

for doc in ${docs[*]}
do
    if [ -f "$doc" ]
    then
        echo $doc.md: $doc
        echo -e '\t'@cat $doc '>' $doc.md
        insdoc+=($doc)
        mkd+=($doc.md)
    fi
done

echo doc: ${mkd[*]}

echo install_doc: ${insdoc[*]}
echo -e '\t'install -d -m 755 '$(DESTDIR)/$(PREFIX)'/share/doc/'$(NAME)'
echo -e '\t'install -Dm 644 '$^ $(DESTDIR)/$(PREFIX)'/share/doc/'$(NAME)'
}

makefile > makefile
